<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>{{title}}</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header }}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								{{#each articles.side_bar}}
									<h3>{{this.name}}</h3>
									<ul>
										{{#each this.items}}
											<li>
												<a href="{{this.link}}">{{this.item_title}}</a>
											</li>
										{{/each}}
									</ul>
								{{/each}}
							</div>
							<div>
								<h1>News</h1>
								{{#each articles.news}}
									<img src="images/{{this.image}}" alt="Img">
									<h2>{{this.title}}</h2>
									<span class="time">{{this.date}}<br> by: {{this.author}}</span>
									{{{this.content}}}
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer }}
	</div>
</body>
</html>